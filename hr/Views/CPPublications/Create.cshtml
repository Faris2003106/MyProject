@model hr.ViewModel.PublicationsViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ControlPanel.cshtml";
}
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Almarai:wght@300&family=Amiri&family=Aref+Ruqaa&family=Cairo:wght@200&display=swap" rel="stylesheet">

<h1 style=" font-family: 'Tajawal', sans-serif; text-align: center;">إضافة إصدار </h1>

<br />

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div clss="row">
                <form class="forms-sample" asp-action="create" asp-controller="CPPublications" method="post" enctype="multipart/form-data">
                    <div class=" col-md-6 grid-margin stretch-card" style="font-family:'Tajawal', sans-serif;">
                        <div class="card">
                            <div class="card-body">

                                <div class="form-group">
                                    <label>عنوان الاصدار</label>
                                    <input type="text" class="form-control" placeholder="عنوان الاصدار" asp-for="Title">
                                </div>
                                <div class="form-group">
                                    <label>تعليق مختصر</label>
                                    <input type="text" class="form-control" placeholder="تعليق مختصر" asp-for="Description" />
                                </div>
                                <div class="form-group">
                                    <label>تاريخ الاصدار</label>
                                    <input type="datetime-local" class="form-control" placeholder="تاريخ الاصدار" asp-for="CreateDate" />
                                </div>
                                <div class="form-group">
                                    <label>القسم</label>
                                    <select class="form-control" asp-for="Department">
                                        <option value="Adminstrator">الإدارة</option>
                                        <option value="chances"> الفرص</option>
                                        <option value="advices"> نصائح</option>
                                        <option value="miscellaneous"> متنوعة</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Image">صورة الاصدار</label>
                                    <input class="form-control" placeholder="صورة الاصدار" asp-for="Image" />
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail3">إظهار </label>
                                    <div class="form-check form-check-flat form-check-primary">
                                        <label class="form-check-label">
                                            <input type="checkbox" asp-for="status" class="form-check-input">
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2" value="حفظ">حفظ التعديلات</button>
                    <button type="submit" class="btn btn-danger mr-2"><a asp-action="Index" asp-controller="CPPublications" style="color:white"> إلغاء التعديلات</a></button>
                </form>
            </div>
        </div>
    </div>
</div>


