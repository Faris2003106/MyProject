<!-- احصائيات الغرفة -->
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 style=" font-family: 'Tajawal', sans-serif;">احصائيات الغرفة</h3><br />            
            <table class="table table-bordered" style="font-family:'Tajawal', sans-serif; text-align:center">
                <thead>
                    <tr>
                        <th> رقم ID </th>
                        <th> عنوان الاحصائية </th>
                        <th> عدد الاحصائيات </th>
                        <th> إظهار </th>
                        <th> عمليات </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.StaticId</td>
                            <td> @item.StaitcTitle </td>
                            <td> @item.StaitcNum </td>
                            <td>
                                @Html.CheckBoxFor(modelItem => item.status, new { disabled = "disabled" })
                            </td>
                            <td>
                                <button type="submit" class="btn btn-primary mr-2">
                                    <a asp-action="EditStatic" asp-controller="CPHome" asp-route-id="@item.StaticId"><span style="color:white"> تعديل</span></a>
                                </button>   |
                                <button type="submit" class="btn btn-primary mr-2">
                                    <a asp-action="delete" asp-controller="CPHome" asp-route-id="@item.StaticId"><span style="color:white"> حذف</span></a>
                                </button>
                                @* <form  asp-action="delete" asp-route-id="@item.StaticId">
                                    <button type="submit" class="btn btn-primary mr-2" >
                                        <i data-toggle="tooltip">حذف</i>
                                    </button>
                                </form> *@
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table><br />
            <button type="submit" class="btn btn-primary mr-2"><a class="nav-link" asp-action="AddStats" asp-controller="CPHome" style="color:white"> إضافة احصائية</a></button>

        </div>
    </div>
</div>

