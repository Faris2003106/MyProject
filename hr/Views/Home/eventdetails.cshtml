@model hr.Models.events
@{
    ViewData["Title"] = "eventdetails";    
}



<!-- ======= Blog Details Section ======= -->
<section id="blog" class="blog">
    <div class="container" data-aos="fade-up">

        <div class="row g-5">

            <div class="col-lg-12">

                <article class="blog-details">

                    <div class="post-img">
                        <img src="~/img/events/@Model.ImageUrl" alt="" class="img-fluid img-center">
                    </div>

                    <h2 class="title">@Model.Name</h2>


                    <div class="content">
                        <p>
                            @Model.description
                        </p>

                    </div>
                </article>
            </div>


        </div>
    </div>
</section>


