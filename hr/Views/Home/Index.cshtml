        <a href="@Model.videos.Where(s=>s.VideoPosition =="الأسفل").SingleOrDefault().VideoLink;" class="glightbox play-btn"></a>
        <h3>@Model.videos.Where(s=>s.VideoPosition =="الأسفل").SingleOrDefault().VideoTitle</h3>
