        </h4>
        <!--<a class="cta-btn" href="#">Call To Action</a>-->
    </div>
</section><!-- End Call To Action Section -->
<!-- ======= Our Services Section ======= -->
<section id="services" class="services sections-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2 style="font-family: 'Cairo', sans-serif;">الدورات</h2>
            <h4 style="font-family: 'Cairo', sans-serif; color:cadetblue">مجموعة من الخدمات التي من خلالها يستطيع الموظف التطوير من اداء عمله والاستفادة منها بشكل شخصي</h4>
        </div>

        <div class="row gy-4" data-aos="fade-up" data-aos-delay="100">            
                @foreach (var item in Model.courses)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="service-item position-relative">
                            @if(item.OrganizationLogoUrl == null){
                            <div class="icon">
                                <i class="bi bi-easel"></i>
                            </div>
                        }
                        @if(item.OrganizationLogoUrl != null)
                        {
                            <img src="~/img/courses/@item.OrganizationLogoUrl" id="logo" class="testimonial-img flex-shrink-0" style="width: 100px; height: 100px; display: block;">
                        }
                        
                        <h3>@item.Name</h3>
                            <p class="card-text">
                                @if (item.description != null)
                                {
                                    @((item.description.Length > 100) ? item.description.Substring(0, 100) + "..." : item.description
                                        )
                                }
                            </p>
                        
                            <a href="@item.RegisterLink" target="_blank" class="readmore stretched-link">للتسجيل في الدورة <i class="bi bi-arrow-right"></i></a>
                        
                        
                    </div>
                    </div>
                

                <!-- End Service Item -->
                }




        </div><!-- End Service Item -->

    </div>

</section><!-- End Our Services Section -->
<div class="d-grid gap-2 col-2 mx-auto mt-2">
    <a asp-action="Courses" asp-controller="Home" class="btn btn-success" type="button">المزيد من الدورات  </a>
</div>
<!-- ======= Testimonials Section ======= -->
<section id="testimonials" class="testimonials">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2 style="font-family: 'Cairo', sans-serif;">تكريم الموظفين</h2>
            <h4 style="font-family: 'Cairo', sans-serif; color:cadetblue"> </h4>
        </div>

        <div class="slides-3 swiper" data-aos="fade-up" data-aos-delay="100">
            <div class="swiper-wrapper">
                @foreach (var item in Model.honoring)
                {
                    <div class="swiper-slide">
                        <div class="testimonial-wrap">
                            <div class="testimonial-item">
                                <div class="d-flex align-items-center">
                                    <img src="~/img/honoring/@item.ImageUrl" class="testimonial-img flex-shrink-0" alt="" style="width: 100px; height: 100px;">
                                    <div>
                                        <h3>@item.Name</h3>

                                        <p>@item.Description</p>
                                        <time datetime="">@item.CreateDate</time>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- End testimonial item -->
                }





            </div>
        </div>
    </div>
    </div>
    </div>
</section><!-- End Testimonials Section -->
<!-- ======= Portfolio Section ======= -->
<div class="d-grid gap-2 col-2 mx-auto mt-2">
    <a asp-action="honoring" asp-controller="Home" class="btn btn-success" type="button">المزيد </a>
</div>

<!--Publications Section-->
<section id="portfolio" class="portfolio sections-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2 style="font-family: 'Cairo', sans-serif;">إصدارات الادارة</h2>
            <h4 style="font-family: 'Cairo', sans-serif; color:cadetblue"> إصدرات متنوعة من الادارة  إصدرات متنوعة من الادارة إصدرات متنوعة من الادارة إصدرات متنوعة من الادارة </h4>
        </div>

        <div class="portfolio-isotope" data-portfolio-filter="*" data-portfolio-layout="masonry" data-portfolio-sort="original-order" data-aos="fade-up" data-aos-delay="100">

            <div>
                <ul class="portfolio-flters">
                    <li data-filter="*" class="filter-active">الكل</li>
                    <li data-filter=".Adminstrator">الادارة</li>
                    <li data-filter=".chances">فرص</li>
                    <li data-filter=".advices">نصائح</li>
                    <li data-filter=".miscellaneous">متنوعة</li>
                </ul><!-- End Portfolio Filters -->
            </div>

            <div class="row gy-4 portfolio-container">
                @foreach (var item in Model.publications)
                {
                    <div class="col-xl-4 col-md-6 portfolio-item @item.Department">
                        <div class="portfolio-wrap">
                            <a href="~/img/publications/@item.ImageUrl" data-gallery="portfolio-gallery-app" class="glightbox"><img src="~/img/Publications/@item.ImageUrl" class="img-fluid" alt=""></a>
                            <div class="portfolio-info">
                                <h4><a title="More Details">@item.Title</a></h4>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    </div>

                    <!-- End Portfolio Item -->
                }

            </div><!-- End Portfolio Container -->

        </div>

    </div>
</section>
<section id="team" class="team">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2 style="font-family: 'Cairo', sans-serif;">عروض خاصة للموظفين</h2>
            <h4 style="font-family: 'Cairo', sans-serif; color:cadetblue">تقدم مجموعة من الشركات والمطاعم المشهورة بالمدينة عروض خاصة لموظفي غرفة المدينة المنورة </h4>
        </div>

        <div class="row gy-4">
            @foreach (var item in Model.discounts)
            {
                <div class="col-xl-4 col-md-6 d-flex" data-aos="fade-up" data-aos-delay="100">
                    <div class="member">
                        <img src="~/img/discounts/@item.ImageUrl" class="img-fluid" alt="" style="width: 350px; height: 350px;">
                        <h4>@item.Name</h4>
                        <span style="font-family: 'Cairo', sans-serif;">@item.description</span>
                        @if (!string.IsNullOrEmpty(item.TwitterUrl) || !string.IsNullOrEmpty(item.FacebookUrl) || !string.IsNullOrEmpty(item.InsatgramUrl) || !string.IsNullOrEmpty(item.SnapchatUrl))
                        {
                            <div class="social">
                                @if (!string.IsNullOrEmpty(item.TwitterUrl))
                                {
                                    <a href="@item.TwitterUrl" target="_blank"><i class="bi bi-twitter"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(item.FacebookUrl))
                                {
                                    <a href="@item.FacebookUrl" target="_blank"><i class="bi bi-facebook"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(item.InsatgramUrl))
                                {
                                    <a href="@item.InsatgramUrl" target="_blank"><i class="bi bi-instagram"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(item.SnapchatUrl))
                                {
                                    <a href="@item.SnapchatUrl" target="_blank"><i class="bi bi-snapchat"></i></a>
                                }
                            </div>
                        }
                    </div>
                </div>

                <!-- End Team Member -->
            }

        </div>

    </div>
</section><!-- End Our Team Section -->
<div class="d-grid gap-2 col-2 mx-auto mt-2">
    <a asp-action="discounts" asp-controller="Home" class="btn btn-success" type="button">المزيد من الخصومات </a>
</div>

<!--News Section-->
