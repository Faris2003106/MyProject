@model LoginViewModel
@{
    ViewData["Title"] = "Login Page";
}
<div class="wrapper">
    <div class="col-md-12" >
  <form method="post" asp-action="Login" asp-controller="CPAddUser" class="form-signin">
  <h2 class="form-signin-heading">تسجيل الدخول</h2>
  <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email">البريد الإلكتروني</label>
                <br />
                <input asp-for="Email" class="form-control" placeholder="البريد الإلكتروني" required="" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="Password">كلمة المرور</label>
                    <br />
                <input asp-for="Password" class="form-control" name="password" placeholder="كلمة المرور" required="" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label class="checkbox">
                    <input type="checkbox" value="remember-me" id="rememberMe" name="rememberMe" />   
                   
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                    </div>
            <button type="submit" class="btn btn-lg btn-primary btn-block">Login</button>
    </form>
</div>
</div>

