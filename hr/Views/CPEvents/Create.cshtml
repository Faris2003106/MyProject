@model hr.ViewModel.eventsViewModel
@{
    ViewData["Title"] = "Home Page";


}


<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Almarai:wght@300&family=Amiri&family=Aref+Ruqaa&family=Cairo:wght@200&display=swap" rel="stylesheet">

<h1 style=" font-family: 'Tajawal', sans-serif; text-align: center;">إضافة فعالية </h1>

<br />

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div clss="row">
                <form class="forms-sample" asp-action="create" asp-controller="CPEvents" method="post" enctype="multipart/form-data">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger" role="alert">

                            <h6>@ViewBag.Message</h6>

                        </div>
                    }
                    <div class=" col-md-6 grid-margin stretch-card" style="font-family:'Tajawal', sans-serif;">
                        <div class="card">
                            <div class="card-body">


                                <div class="form-group">
                                    <label for="exampleInputEmail3">عنوان الفعالية</label>
                                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="عنوان الفعالية" asp-for="Name">
                                </div>
                                <div class="form-group">
                                    <label>تاريخ النشر</label>
                                    <input type="datetime-local" class="form-control" placeholder="تاريخ النشر" asp-for="CreateDate">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail3">جهة الفعالية</label>
                                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="جهة الفعالية" asp-for="Organization">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Image">صورة الفعالية</label>
                                    <input class="form-control" id="Image" placeholder="صورة الفعالية" asp-for="Image">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail3">نص</label>
                                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="نص" asp-for="description">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail3">إظهار الفعالية</label>
                                    <div class="form-check form-check-flat form-check-primary">
                                        <label class="form-check-label">
                                            <input type="checkbox" asp-for="status" class="form-check-input">
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2" value="حفظ">حفظ التعديلات</button>
                    <button type="submit" class="btn btn-danger mr-2"><a asp-action="Index" asp-controller="CPEvents" style="color:white"> إلغاء التعديلات</a></button>
                </form>
            </div>
        </div>
    </div>
</div>



